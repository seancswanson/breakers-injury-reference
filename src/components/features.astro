---
// Boilerplate from https://github.com/surjithctly/astroship/
// @ts-ignore
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Basic 3D Models",
    description: "Explore simplified 3D models of dancers in key poses, helping you visualize common movements and their impact on your body.",
    icon: "bx:bxs-cube-alt",
  },
  {
    title: "Fundamental Anatomy Guide",
    description: "Access basic information about key muscles and joints involved in dance, focusing on areas most prone to injury.",
    icon: "bx:bxs-book-open",
  },
  {
    title: "General Training Tips",
    description: "Get started with general advice on exercises and techniques to help prevent common dance-related injuries.",
    icon: "bx:bxs-star",
  },
  {
    title: "Pose Analysis (Coming Soon)",
    description: "We're working on a feature to help you analyze your form. For now, use our guides to check your technique.",
    icon: "bx:bxs-camera",
  },
  {
    title: "Injury Prevention Basics",
    description: "Learn about the most common dance injuries and get introductory tips on how to avoid them.",
    icon: "bx:bxs-first-aid",
  },
];

---

<div class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    Everything you need to dance safely and effectively  </h2>
  <p class="text-lg mt-4 text-slate-800">
    Unlock the secrets to a sustainable dance career with The Breaker's Injury Reference's innovative injury prevention tools.  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-black rounded-full  p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
          <p class="text-slate-800 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
